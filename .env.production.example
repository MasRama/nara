# Production Environment Template
# Copy this to .env.production on your server (DO NOT commit .env.production)

# Server
NODE_ENV=production
PORT=5555
APP_URL=https://yourdomain.com
HAS_CERTIFICATE=true

# Database
DB_CONNECTION=production
DB_FILE=database/production.sqlite3

# Logging
LOG_LEVEL=info

# Google OAuth (optional)
GOOGLE_REDIRECT_URI=https://yourdomain.com/google/callback
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Backup (optional)
BACKUP_ENCRYPTION_KEY=your_encryption_key
BACKUP_RETENTION_DAYS=30
